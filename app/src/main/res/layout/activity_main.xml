<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_amount_shillings_id"
        android:hint="Amount in shillings"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="90dp"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount in dollars"
        android:id="@+id/tv_amount_dollars_id"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/et_amount_shillings_id"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_convert_id"
        android:text="Convert"
        android:textStyle="bold"
        android:layout_below="@id/tv_amount_dollars_id"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:onClick="convertMethod"/>

</RelativeLayout>